{% extends view('app') %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Usu√°rios</h4>
                    <p class="category">Teste BANCO DE DADOS</p>
                </div>
                <div class="content table-responsive table-full-width">
